{% extends "base.html.twig" %} 

{% block title %}Création d'une annonce - Plant&Flower{% endblock %} 
	{% block javascripts %}
        {#        A modifier #}
        {#        {{ encore_entry_script_tags("app") }} #}
        {#    {{ encore_entry_script_tags("createAnnonce") }} #}
    {% endblock %}

{% block body %}

    {{ form_start(CreateAnnonceForm) }}
    <div class="container-createAnnonce">
        <h2 id="title_sell_your_plant">Vendez votre végétal</h2>
        <div class="container-total_block">
            <div class="container-left_block">
                <div class="add_img">
                    {#            {{ form_row(CreateAnnonceForm.images, { #}
                    {#                'label': '+ Ajoutez vos photos', #}
                    {#                'attr': { #}
                    {#                  'class': 'input', #}
                    {#                }, #}
                    {#                'id': "get-file" #}
                    {#            })}} #}
                </div>
                <div class="add_img_txt">
                    Ajouter jusqu'à 3 photos. (1 photo minimum est obligatoire pour vendre
                    votre végétal)
                </div>
                <div class="container-img_annonce">container-images_annonce
                    <div class="container-img_preview">
                        {#                            <img class="img_preview" src="" height="100" width="100"/> #}
                    </div>
                    <div class="container-img_preview">
                        {#                            <img class="img_preview" src="" height="100" width="100"/> #}
                    </div>
                    <div class="container-img_preview">
                        {#                            <img class="img_preview" src="" height="100" width="100"/> #}
                    </div>
                </div>
                {% if not CreateAnnonceForm.vars.valid %}
                    <div>
                        {{ form_errors(CreateAnnonceForm) }}
                    </div>
                {% endif %}
                <div class="createAnnonce-item">
                    <h3>Titre</h3>
                    {{ form_row(CreateAnnonceForm.title, {
                        'label': false,
                        'attr': {
                            'class': 'input',
                            'placeholder': 'ex. Orchidée',
                        }
                    }) }}
                </div>
                <div class="createAnnonce-item">
                    <h3>Catégorie</h3>
                    {#        {{ form_row(CreateAnnonceForm.category, { #}
                    {#          'label': false, #}
                    {#          'placeholder': 'Choisissez votre catégorie', #}
                    {#          'attr': { #}
                    {#            'class': 'input', #}
                    {#          } #}
                    {#        })}} #}
                </div>
                <div class="createAnnonce-item">
                    <h3>Décrivez votre végétal (facultatif)</h3>
                    {{ form_row(CreateAnnonceForm.description, {
                        'label': false,
                        'attr': {
                            'class': 'input',
                            'placeholder': 'ex. cactus en bonne état',
                        }
                    }) }}
                </div>
                <div class="createAnnonce-item createAnnonce-checkbox">
                    {{ form_row(CreateAnnonceForm.plantPot,{
                        'label': 'Pot disponible',
                        'attr': {
                            'class': 'checkboxAnnonce',
                        }
                    }) }}
                </div>
                <div class="createAnnonce-item">
                    <h3>Poids du végétal:</h3>
                    {{ form_row(CreateAnnonceForm.poids, {
                        'label': false,
                        'attr': {
                            'class': 'input',
                        }
                    }) }}
                </div>
            </div>
            <div class="right_block">
                <div class="createAnnonce-item">
                    <h3>Date d'expiration</h3>
                    {{ form_row(CreateAnnonceForm.dateExpiration, {
                        'label': false,
                        'attr': {'class': 'input',
                        }
                    }) }}
                </div>
                <div class="createAnnonce-item">
                    <h3>Prix</h3>
                    {{ form_row(CreateAnnonceForm.priceOrigin, {
                        'label': false,
                        'id': 'first',
                        'attr': {
                            'class': 'input',
                            'placeholder': 'ex. 2,50',
                        }
                    }) }}
                    <div id="message"></div>
                </div>
                <div class="createAnnonce-item">
                    <h3>Prix définitif</h3>
                    <div class="price" id="result">€</div>
                </div>
                <div class="createAnnonce-item">
                    <p>
                        <em>Pour que le site reste gratuit, nous appliquons des frais de commission qui servent à
                            financer
                            la maintenance du service (hébergement, domaines, équipes, matériel...).</em>
                    </p>
                </div>
                <div class="createAnnonce-item" id="container-delivery">
                    <div class='createAnnonce-checkbox'>
                        {{ form_row(CreateAnnonceForm.shipement,{
                            'label': 'Livraison possible',
                            'attr': {
                                'class': 'checkboxAnnonce',
                            }
                        }) }}
                    </div>
                    <div class="delivery_mode">
                        <h4>Mode de remise de votre colis</h4>
                        <div class="modeFlex">
                            <input type="radio" name="mode" id="remise" class="input checked active" checked>
                            <i class="fa-solid fa-handshake icon"></i>
                            <p class="mode">Remise en main propre</p>
                        </div>
                        <div class="modeFlex">
                            <input type="radio" name="mode" id="mode" class="input checked">
                            <img id="img_mondial_relay" class="img_mondial_relay"
                                 src="{{ asset('media/img/mondialRelay.png') }}" alt="Logo Mondial Relay"></img>
                            <p class="mode">Mondial Relay</p>
                        </div>
                        <div class="container-mondial_relay_widget">
                            <div class="mondial_relay_widget" id="Zone_Widget"></div>
                            <div>
                                <input type="hidden" id="ParcelShopCode" name="ParcelShopCode"/>
                            </div>
                        </div>
                    </div>
                    <div class="container-shipping_address">
                        <div class="createAnnonce-item villeExpedition">
                            <h3>Ville</h3>
                            {{ form_row(CreateAnnonceForm.ville, {
                                'label': false,
                                'attr': {
                                    'class': 'input',
                                    'placeholder': 'ex. Paris',
                                }
                            }) }}
                        </div>
                        <div class="createAnnonce-item">
                            {{ form_row(CreateAnnonceForm.expAdress, {
                                'label': false,
                                'attr': {
                                    'class': 'input',
                                    'placeholder': 'Adresse',
                                }
                            }) }}
                        </div>
                        <div class="createAnnonce-item">
                            {{ form_row(CreateAnnonceForm.expZipCode, {
                                'label': false,
                                'attr': {
                                    'class': 'input',
                                    'placeholder': 'Code Postal',
                                }
                            }) }}
                        </div>
                    </div>
                </div>
                <div class="createAnnonce-item">
                    <button type="submit">+ AJOUTER</button>
                </div>
                <div id="Zone_Widget"></div>
                <input type="hidden" id="expRelId"/>
            </div>
        </div>
    </div>
    {{ form_end(CreateAnnonceForm) }}
{% endblock %}