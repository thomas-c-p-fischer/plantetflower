{% extends 'base.html.twig' %}

{% block title %}Inscription - Plant&Flower{% endblock %}

{% block body %}
    <div class="register-body">
        <div class="Register-title">
            {#            {% if editMode %} #}
            {#            <h2>Modifiez vos informations </h2> #}
            {#            {% else %} #}
            <h2 id="connaissance">Faisons-connaissance</h2>
        </div>
        <div class="connexion">
            <p class="already-member">Vous avez déjà un compte?
                <a href={{ path('security_login') }}>Connectez-vous</a>
                ou utilisez
            </p>

            <div class="imgSocialnetwork">
                {#                <a href="{{ path('connect_google') }}"><img class="google" src="img/google.png" alt="Logo Google"></a> #}
                {#                <a href="{{ path('connect_facebook') }}"><img class="facebook" src="img/facebook.png" alt="Logo Facebook"></a> #}
            </div>
        </div>
        {#        {% endif %} #}

        {{ form_start(registrationForm) }}
        <div class="information-text">
            <p>
                Vous êtes ...
            </p>
        </div>
        <div class="statusNameFirstname">
            <div class="status">
                {{ form_row(registrationForm.status) }}
            </div>
            <div class="name">
                {{ form_row(registrationForm.lastname, {'label': false,'attr': {'placeholder': 'Nom*'}} ) }}
            </div>
            <div class="firstname">
                {{ form_row(registrationForm.firstname, {'label': false,'attr': {'placeholder': 'Prénom*'}} ) }}
            </div>
        </div>
        <div class="information-text">
            <p>
                Votre adresse ne sera pas visible auprès des autres utilisateurs, elle servira uniquement à programmer
                les livraisons.
            </p>
        </div>
        <div class="globaladress1">
            <div class="street">
                {{ form_row(registrationForm.streetnumber, {'label': false,'attr': {'placeholder': 'N° rue*'}} ) }}
                {{ form_row(registrationForm.address, {'label': false,'attr': {'placeholder': 'Adresse*'}} ) }}
            </div>

            <div class="Address">
                {{ form_row(registrationForm.address2, {'label': false,'attr': {'placeholder': 'Complément Adresse'}} ) }}
            </div>
        </div>
        <div class="globaladress2">
            <div class="zipCode">
                {{ form_row(registrationForm.zipcode, {'label': false,'attr': {'placeholder': 'Code postale*'}} ) }}
                {# <input type="text" name="zipcode" id="zipcode" placeholder="Code postal*" > #}
            </div>
            <div class="city">
                {{ form_row(registrationForm.city, {'label': false,'attr': {'placeholder': 'Ville*'}} ) }}
                {# <input type="text" name="city" id="city" placeholder="Ville*" > #}
            </div>
        </div>
        <div class="email">
            {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Votre Email*'}} ) }}
        </div>
        <div class="password">
            {{ form_row(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe*'}}) }}
        </div>

        {# appel du captcha #}

        <div class="agree-check">
            {{ form_row(registrationForm.agreeTerms, {
                'attr': {
                    'label': false,
                },
                'help_html': true,
            }) }}
        </div>

        <button type="submit" class="btn-signup">
            {#            {% if editMode %} #}
            {#                Modifier #}

            {#            {% else %} #}
            Inscription

            {#            {% endif %} #}
        </button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
