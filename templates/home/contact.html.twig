{% extends 'base.html.twig' %}

{% block title %}Contact - Plant&Flower{% endblock %}

{% block body %}
    <div class="contactAll">
        <h1 class="contactTitle">Vous avez des questions,
            <br>
            des suggestions,
            <br>
            toute l'équipe est disponible
            <br>
            pour vous répondre !</h1>
        <div class="address&Form">
            <p class="plantetflower">Plant&Flower®</p>
            <p class="mailContact">contact@plantetflower.com</p>
            <div class="formContact">
                <div class="nom">
                    {{ form_start(form) }}
                    {{ form_row(form.nom, {'label': false, 'attr':
                        {'placeholder': 'Nom', 'class': 'formNom'}}) }}
                </div>
                <div class="email">
                    {{ form_row(form.email, {'label': false, 'attr':
                        {'placeholder': 'Email', 'class': 'formEmail'}}) }}
                </div>
                <div class="message">
                    {{ form_row(form.message, {'label': false, 'attr':
                        {'placeholder': 'Message', 'class': 'formMessage'}}) }}
                </div>
                <div class="envoyer">
                    <button type="submit" class="btn_envoyer">
                        Envoyer
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}